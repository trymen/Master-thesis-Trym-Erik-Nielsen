file = {:C$\backslash$:/Users/tniel/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Anderson et al. - 2010 - The Magnetic Field of Mercury.pdf:pdf},
journal = {Space Sci Rev},
keywords = {Bepi,Colombo,Magnetic field {\textperiodcentered},Magnetosphere {\textperiodcentered} MESSENGER {\textperiodcentered},Mercury {\textperiodcentered}},
pages = {307--339},
title = {{The Magnetic Field of Mercury}},
volume = {152},
year = {2010}
}
@article{Benkhoff2009,
