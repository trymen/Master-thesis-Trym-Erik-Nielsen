@article{Garrett1981,
abstract = {It is pointed out that the loss of a satellite and significant operational anomalies on other satellites have been attributed to spacecraft charging. A review is conducted of current knowledge concerning the processes which lead to the buildup of static charge on satellite surfaces. A description is provided of spacecraft charging observations, taking into account rocket measurements, satellite measurements, and effects of spacecraft charging. Current mechanisms are explored, giving attention to time scales, incident particle fluxes, photoelectron currents, backscattered and secondary electrons, magnetic field-induced current distortions, motion-induced effects, charge deposition by energetic particles, and artificial charging mechanisms. Aspects of spacecraft charging theory are also reported. General considerations are discussed along with thick sheath models, thin sheath and related models, the general probe theory, and numerical simulation techniques. Approaches to prevent spacecraft charging are also described.},
author = {Garrett, Henry Berry},
doi = {10.1029/RG019i004p00577},
